<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMAUI.LoginPage"
             Title="Login">

    <StackLayout Padding="20" VerticalOptions="Center" Spacing="20">
        <Label Text="Login" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="#4CAF50" TextColor="White" />

        <Label x:Name="ErrorMessage" TextColor="Red" IsVisible="False" HorizontalOptions="Center" />
    </StackLayout>
</ContentPage>
